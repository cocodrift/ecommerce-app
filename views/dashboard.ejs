<html>
<head>
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav>
  <div>
    <a href="/ledger/dashboard">Dashboard</a>
    <a href="/ledger/add">add entry</a>
    <a href="/ledger/income-statement">Income Statement</a>
  </div>
  <a href="/logout">Logout</a>
</nav>
<table border="1">
<tr>
  <th>Date</th><th>Type</th><th>Amount</th><th>Description</th>
</tr>

<% entries.forEach(e => { %>
<tr>
  <td><%= new Date(e.date).toLocaleString() %></td>
  <td><%= e.type %></td>
  <td><%= e.amount %></td>
  <td><%= e.description %></td>
</tr>
<% }) %>
</table>

</body>
</html>
